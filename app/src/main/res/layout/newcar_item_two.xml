<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:padding="8dp"
        android:id="@+id/tv_newcar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="捷豹F-Type英国定制特别版售110.8万起"
        android:textColor="#000"
        android:textSize="18sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">


        <ImageView
            android:layout_weight="1"
            android:id="@+id/iv_newcarpic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pic"
            />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/iv_newcarpic2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pic"
            />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/iv_newcarpic3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/pic"
            />

    </LinearLayout>



    <LinearLayout
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_newcar_from"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汽车之家"
            android:textColor="#bbb"
            />

        <TextView
            android:id="@+id/tv_newcar_time"
            android:paddingLeft="10dp"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55分钟前"
            android:textColor="#bbb"
            />




    </LinearLayout>




</LinearLayout>