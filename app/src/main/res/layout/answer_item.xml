<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="false"
    android:background="#fff"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_width="match_parent">


        <RelativeLayout
            android:id="@+id/rl_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="5dp"
                android:id="@+id/iv_account"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/iv_account"
                android:id="@+id/rl_ques_undo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#000"
                    />

                <TextView
                    android:textColor="#ccc"
                    android:textSize="11sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/tv_username"
                    android:id="@+id/tv_sendtimeandcity_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_shafa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:textColor="#bbb"
                />




        </RelativeLayout>

        <TextView
            android:layout_margin="10dp"
            android:textColor="#ccc"
            android:layout_width="wrap_content"
            android:id="@+id/tv_answer"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_answer"
            />


    </RelativeLayout>


    <LinearLayout
        android:background="#fff"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/ll_no_comment"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/saturn__topic_detail_reply"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="10sp"
            android:textColor="#ccc"
            android:text="话题还没有回复哦~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:textSize="10sp"
            android:textColor="#ccc"
            android:layout_marginTop="3dp"
            android:text="快来抢沙发吧!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>









</RelativeLayout>