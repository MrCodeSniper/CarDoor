<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
       android:padding="10dp"
        android:layout_toLeftOf="@+id/iv_newcarpic"
        android:id="@+id/tv_newcar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="国产欧蓝德疑似起售价曝光15.98万起售"
        android:textColor="#000"
        android:textSize="17sp"
        />
    
    <ImageView
        android:id="@+id/iv_newcarpic"
        android:layout_margin="7dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="120dp"
        android:layout_height="80dp"
        />


    <TextView
        android:id="@+id/tv_newcar_from"
        android:paddingLeft="10dp"
        android:textSize="13sp"
        android:layout_below="@+id/tv_newcar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="汽车之家"
        android:textColor="#bbb"
        />

    <TextView
        android:layout_toRightOf="@+id/tv_newcar_from"
        android:id="@+id/tv_newcar_time"
        android:paddingLeft="10dp"
        android:textSize="13sp"
        android:layout_below="@+id/tv_newcar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="55分钟前"
        android:textColor="#bbb"
        />
    
    
    
    
</RelativeLayout>